<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_product_config" model="ir.ui.view">
        <field name="name">product.template.product.form.product.config</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']" position="before">
                    <div>
                        <field name="is_configurable_product"/>
                        <label for="is_configurable_product" string="Is Configurable Product"/>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>