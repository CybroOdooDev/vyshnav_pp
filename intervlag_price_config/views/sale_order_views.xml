<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_barnding_tag" model="ir.ui.view">
        <field name="name">sale.order.view.form.branding.tag</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
              <xpath expr="//field[@name='weight']" position="after">
                <button name="action_update_price_config_price" type="object" class="link link-danger" icon="fa-refresh" string="Update Config Prices" attrs="{'invisible': [('is_updated', '=',True)]}"/>
                <button name="action_update_price_config_price" type="object" class="link link-success" icon="fa-refresh" string="Update Config Prices" attrs="{'invisible': [('is_updated', '=',False)]}"/>
                  <field name="is_updated" invisible="1"/>
               </xpath>
        </field>
    </record>
</odoo>