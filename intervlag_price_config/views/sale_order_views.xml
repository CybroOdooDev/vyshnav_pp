<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_barnding_tag" model="ir.ui.view">
        <field name="name">sale.order.view.form.branding.tag</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']" position="after">
                <field name="price_config_id" force_save="1" invisible="1"/>
            </xpath>
<!--             <xpath expr="//form" position="attributes">-->
<!--            <attribute name="js_class">sale_order_price_config</attribute>-->
<!--           </xpath>-->
              <xpath expr="//field[@name='weight']" position="after">
<!--                    <span t-on-click="(ev) => this._UpdatePrices(ev)" class="update-prices-link">-->
<!--                       <i class="fa fa-refresh"-->
<!--                         style="font-size:20px"></i>-->
<!--                        Update Prices-->
<!--                   </span>-->
                <button name="action_update_price_config_price" type="object" class="link link-danger" icon="fa-refresh" string="Update Config Prices" attrs="{'invisible': [('is_updated', '=',True)]}"/>
                <button name="action_update_price_config_price" type="object" class="link link-success" icon="fa-refresh" string="Update Config Prices" attrs="{'invisible': [('is_updated', '=',False)]}"/>
                  <field name="is_updated" invisible="1"/>
               </xpath>
        </field>
    </record>
</odoo>