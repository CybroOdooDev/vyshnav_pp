<?xml version="1.0" encoding="utf-8"?>
<!-- Inherited sale order view for adding button for wizard also for ticket smart button-->
<odoo>
 <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_ticket"
                         string="Generate Ticket" type="object"
                         class="oe_highlight" attrs="{'invisible':[('state','in',('draft','cancel'))]}"/>
                <field name="helpdesk_ticket_count" invisible="1"/>
             </xpath>
        </field>
 </record>
</odoo>