<odoo>
<!--  Inherited helpdesk.ticket.report.analysis view for adding filters and measures -->
<record id="helpdesk_ticket_report_analysis_view_search_inherit"
        model="ir.ui.view">
    <field name="name">helpdesk.ticket.report.analysis.view.search.inherit
    </field>
    <field name="model">helpdesk.ticket.report.analysis</field>
    <field name="inherit_id"
           ref="helpdesk.helpdesk_ticket_report_analysis_view_search"/>
    <field name="arch" type="xml">
        <xpath expr="//search/group" position="inside">
            <filter string="Complaint Departments" name="complaint_departments"
                    domain="[]"
                    context="{'group_by':'complaint_department_id'}"/>
            <filter string="Complaint Categories" name="complaint_categories"
                    domain="[]"
                    context="{'group_by':'complaint_category_ids'}"/>
            <filter string="Complaint Type" name="complaint_type" domain="[]"
                    context="{'group_by':'complaint_type'}"/>
            <filter string="Complaint Validation" name="validation" domain="[]"
                    context="{'group_by':'ticket_status'}"/>
            <filter string="Description" name="description" domain="[]"
                    context="{'group_by':'description'}"/>
        </xpath>
    </field>
</record>
<record id="helpdesk_ticket_view_pivot_analysis_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.view.pivot.analysis.inherit</field>
    <field name="model">helpdesk.ticket.report.analysis</field>
    <field name="inherit_id"
           ref="helpdesk.helpdesk_ticket_view_pivot_analysis"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='ticket_deadline_hours']" position="after">
            <field name="cost_of_restore" type="measure"/>
            <field name="valid_ticket_percentage" type="measure" widget="percentage"/>
            <field name="total_order_amount" type="measure" widget="monetary"/>
            <field name="average_cost" type="measure" widget="monetary"/>
        </xpath>
    </field>
</record>
</odoo>