<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!-- COMPLAINT DEPARTMENT TREE VIEW-->
    <record id="complaint_department_tree_view" model="ir.ui.view">
        <field name="name">complaint.department.tree.view</field>
        <field name="model">complaint.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="complaint_category_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
<!-- COMPLAINT DEPARTMENT FORM VIEW-->
    <record id="complaint_department_from_view" model="ir.ui.view">
        <field name="name">complaint.department.form.view</field>
        <field name="model">complaint.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Department name"/>

                            <field name="complaint_category_ids" widget="many2many_tags"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="complaint_department_view_action" model="ir.actions.act_window">
        <field name="name">Complaint Department</field>
        <field name="res_model">complaint.department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>