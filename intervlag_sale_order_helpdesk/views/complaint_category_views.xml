<?xml version="1.0" encoding="utf-8" ?>
<odoo>
      <!--COMPLAINT CATEGORY TREE VIEW-->
    <record id="complaint_category_tree_view" model="ir.ui.view">
        <field name="name">complaint_category_tree_view</field>
        <field name="model">complaint.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" required="1"/>
            </tree>
        </field>
    </record>
    <record id="complaint_category_view_action" model="ir.actions.act_window">
        <field name="name">Complaint Category</field>
        <field name="res_model">complaint.category</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create one!
            </p>
        </field>
        <field name="view_mode">tree</field>
    </record>
</odoo>